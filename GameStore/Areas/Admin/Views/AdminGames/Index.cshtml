@model IEnumerable<GameStore.Models.GameViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateGame", "AdminGames", new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameIcon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameGames)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BriefDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture4)
        </th>
        <th>
            <p>Changes</p>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="120" height="150" src=" @Html.DisplayFor(modelItem => item.GameIcon)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameGames)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BriefDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture4)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-info" }) 
       
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) 
         
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
